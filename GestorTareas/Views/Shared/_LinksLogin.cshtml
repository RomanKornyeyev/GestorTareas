@using GestorTareas.Models.Entities
@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager

    <ul class="navbar-nav">
        @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <span class="nav-link text-dark">Hola, @User.Identity.Name</span>
        </li>
        <li class="nav-item">
            <form asp-action="logout" class="form-inline" asp-controller="Users">
                <button type="submit" class="nav btn btn-link text-dark">
                    Logout
                </button>
            </form>
        </li>
    } else
    {
        <li class="nav-item">
            <a class="nav-link dark-text" asp-controller="Users" asp-action="Register">
                Register
            </a>
        </li>

        <li class="nav-item">
            <a class="nav-link dark-text" asp-controller="Users" asp-action="Login">
                Login
            </a>
        </li>
    }
</ul>