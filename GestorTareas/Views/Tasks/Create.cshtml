@model GestorTareas.Models.Entities.Task

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Task</h4>
<hr />
<div class="row justify-content-center">
    <div class="col-md-4 shadow-sm p-4 rounded">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row g-3">
                <!-- Title -->
                <div class="col-md-6">
                    <label asp-for="Title" class="form-label"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <!-- Subtitle -->
                <div class="col-md-6">
                    <label asp-for="Subtitle" class="form-label"></label>
                    <input asp-for="Subtitle" class="form-control" />
                    <span asp-validation-for="Subtitle" class="text-danger"></span>
                </div>

                <!-- ImageUrl -->
                <div class="col-md-6">
                    <label asp-for="ImageUrl" class="form-label"></label>
                    <input asp-for="ImageUrl" class="form-control" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>

                <!-- Text -->
                <div class="col-md-6">
                    <label asp-for="Text" class="form-label"></label>
                    <input asp-for="Text" class="form-control" />
                    <span asp-validation-for="Text" class="text-danger"></span>
                </div>

                <!-- UserId -->
                <div class="col-md-4">
                    <label asp-for="UserId" class="form-label"></label>
                    <select asp-for="UserId" class="form-select" asp-items="ViewBag.UserId"></select>
                    <span asp-validation-for="UserId" class="text-danger"></span>
                </div>

                <!-- StatusId -->
                <div class="col-md-4">
                    <label asp-for="StatusId" class="form-label"></label>
                    <select asp-for="StatusId" class="form-select" asp-items="ViewBag.StatusId"></select>
                    <span asp-validation-for="StatusId" class="text-danger"></span>
                </div>

                <!-- PriorityId -->
                <div class="col-md-4">
                    <label asp-for="PriorityId" class="form-label"></label>
                    <select asp-for="PriorityId" class="form-select" asp-items="ViewBag.PriorityId"></select>
                    <span asp-validation-for="PriorityId" class="text-danger"></span>
                </div>

                <div class="col-12 d-flex justify-content-center gap-2 mt-4">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>

<div class="text-center mt-4">
    <a asp-action="Index" class="btn btn-outline-primary"><i class="fa-solid fa-angle-left"></i> Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
